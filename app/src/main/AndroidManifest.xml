<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.dante.tammodertates">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/launcher_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.example.dante.tammoderates.Home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name="com.example.dante.tammoderates.Social_Media"
                android:label="@string/social_media_label">
        </activity>
        <activity
                android:name="com.example.dante.tammoderates.Meet_The_Officers"
                android:label="@string/title_activity_meet_the_officers"
                android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
                android:name="com.example.dante.tammoderates.About"
                android:label="@string/app_name">
        </activity>

        <meta-data
                android:name="preloaded_fonts"
                android:resource="@array/preloaded_fonts"/>

        <activity
                android:name="com.example.dante.tammoderates.Important_Dates"
                android:label="@string/tamm_important_dates_title">
        </activity>
        <activity
                android:name="com.example.dante.tammoderates.Login"
                android:label="@string/title_activity_login">
        </activity>
    </application>

</manifest>