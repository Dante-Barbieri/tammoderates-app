<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.dante.tammoderates.Social_Media" android:background="@color/backgroundColor">

    <ImageButton
            android:src="@drawable/twitter_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/twitter_button" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:scaleType="fitCenter" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/instagram_button"
            android:contentDescription="@string/twitter_button" android:onClick="openTwitter"/>
    <ImageButton
            android:src="@drawable/instagram_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/instagram_button" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/twitter_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/facebook_button"
            android:contentDescription="@string/instagram_button" android:onClick="openInstagram"/>
    <ImageButton
            android:src="@drawable/facebook_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/facebook_button" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/instagram_button"
            app:layout_constraintBottom_toTopOf="@+id/tamm_website_button"
            android:contentDescription="@string/facebook_button" android:onClick="openFacebook"/>
    <ImageButton
            android:src="@drawable/tammoderates_logo"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/tamm_website_button" app:layout_constraintStart_toStartOf="parent"
            android:scaleType="fitCenter" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facebook_button"
            android:contentDescription="@string/tamm_website_button" android:onClick="openWebsite"/>
</android.support.constraint.ConstraintLayout>